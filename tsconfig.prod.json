{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "jsx": "react",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": "./",
      "outDir": "./dist",
      "paths": {
        "@providers/*": ["src/providers/*"],
        "@procedures/*": ["src/procedures/*"],
        "@utils/*": ["src/utils/*"],
        "@server/*": ["src/server/*"]
      },
    },
    "include": ["src"],
    "exclude": ["src/tests/"]
  }
  